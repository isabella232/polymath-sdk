{
  "name": "@polymathnetwork/sdk",
  "version": "2.0.1-beta.60",
  "description": "A Javascript SDK for interacting with the Polymath network for the browser and Node.js",
  "bugs": {
    "url": "https://github.com/PolymathNetwork/polymath-sdk/issues"
  },
  "homepage": "https://github.com/PolymathNetwork/polymath-sdk#readme",
  "author": "Polymath Studios Inc.",
  "license": "ISC",
  "main": "dist/index.js",
  "browser": "dist/index.browser.js",
  "typings": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "test": "jest --coverage",
    "build:ts": "ttsc -b --watch",
    "build:dev": "webpack --mode development --display-error-details",
    "build:prod": "webpack --mode production && ttsc -b",
    "build:ci": "yarn build:prod",
    "commit": "npx git-cz",
    "semantic-release": "semantic-release",
    "coveralls": "jest --coverage && cat ./coverage/lcov.info | coveralls"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testMatch": [
      "**/__tests__/**/*.(ts|tsx)"
    ],
    "testPathIgnorePatterns": [
      "dist"
    ],
    "moduleNameMapper": {
      "~/(.*)": "<rootDir>/src/$1"
    },
    "setupFiles": [
      "<rootDir>/src/testUtils/setupTests.ts"
    ]
  },
  "dependencies": {
    "@0x/subproviders": "^3.0.2",
    "@babel/polyfill": "^7.0.0",
    "@babel/runtime": "^7.2.0",
    "@polymathnetwork/contract-wrappers": "3.0.0-beta.56",
    "@types/sinon": "^7.5.0",
    "bluebird": "^3.5.5",
    "ethereum-address": "^0.0.4",
    "json-stable-stringify": "^1.0.1",
    "lodash": "^4.17.13",
    "phin": "^3.4.0",
    "semantic-release-cli": "^5.1.1",
    "semver": "^5.6.0",
    "uuid": "^3.3.2"
  },
  "browserslist": [
    "last 1 version",
    "> 1%",
    "maintained node versions",
    "not dead"
  ],
  "devDependencies": {
    "@babel/core": "^7.2.0",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/preset-env": "^7.4.2",
    "@babel/preset-typescript": "^7.3.3",
    "@commitlint/cli": "^7.6.1",
    "@commitlint/config-conventional": "^7.6.0",
    "@semantic-release/git": "^7.1.0-beta.3",
    "@types/bluebird": "^3.5.27",
    "@types/jest": "^23.3.10",
    "@types/json-stable-stringify": "^1.0.32",
    "@types/lodash": "^4.14.123",
    "@types/node": "^10.12.12",
    "@types/phin": "^3.3.0",
    "@types/semver": "^5.5.0",
    "@types/uuid": "^3.4.4",
    "@typescript-eslint/eslint-plugin": "^1.6.0",
    "awesome-typescript-loader": "^5.2.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "babel-loader": "^8.0.5",
    "coveralls": "^3.0.7",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jest": "^22.15.0",
    "husky": "^1.3.1",
    "jest": "^24.1.0",
    "lint-staged": "^8.1.5",
    "prettier": "1.16.4",
    "prettier-eslint": "^8.8.2",
    "prettier-eslint-cli": "^4.7.1",
    "reflect-metadata": "^0.1.12",
    "regenerator-runtime": "^0.13.1",
    "semantic-release": "^16.0.0-beta.18",
    "sinon": "^7.5.0",
    "ts-loader": "^5.3.3",
    "ts-mock-imports": "^1.2.6",
    "tsconfig-paths": "^3.7.0",
    "tsconfig-paths-webpack-plugin": "^3.2.0",
    "ttypescript": "^1.5.6",
    "typescript": "3.2.4",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,css,md}": [
      "prettier-eslint --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PolymathNetwork/polymath-sdk.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
